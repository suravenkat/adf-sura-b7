{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_dataflow_sql_tbl1",
						"type": "DatasetReference"
					},
					"name": "sourceTable1",
					"description": "ImportData from ds_sql1"
				},
				{
					"dataset": {
						"referenceName": "ds_dataflow_sql_table2",
						"type": "DatasetReference"
					},
					"name": "sourceTable2",
					"description": "importData from SQL table2"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_dataflow_target_adls",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join1"
				},
				{
					"name": "filter1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          dep as string,",
				"          salary as decimal(10,2),",
				"          last_updated as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourceTable1",
				"source(output(",
				"          id as integer,",
				"          location as string,",
				"          mobilenum as string,",
				"          address as string,",
				"          last_updated as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourceTable2",
				"sourceTable1, sourceTable2 join(sourceTable1@id == sourceTable2@id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 filter(equals(dep, 'IT')) ~> filter1",
				"filter1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['joinFilterSQLDataflowout'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          empid = sourceTable1@id,",
				"          empname = name,",
				"          dep,",
				"          salary,",
				"          location,",
				"          mobilenum,",
				"          address",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}